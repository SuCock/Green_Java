package ex03;

import java.util.Scanner;

public class Ex01 {
	public static void main(String[] args) {
		Scanner scan  = new Scanner(System.in);
		System.out.println("반복할 문자를 입력해주세요.");
		String str = scan.next();
		System.out.println("반복할 수를 입력해주세요.");
		int n = scan.nextInt();
		
		for(int i = 0; i<n ; i++) {
			System.out.print(str);
		}
	}
}
